@{
    ViewBag.Title = "Select";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col">
            <h3>Select game size:</h3>
            @using (Html.BeginForm("Select", "Game"))
            {
                <button type="submit" name="size" value="small" class="">Small</button>
                <button type="submit" name="size" value="medium" class="">Medium</button>
                <button type="submit" name="size" value="large" class="">Large</button>
            }
        </div>
    </div>
</div>

