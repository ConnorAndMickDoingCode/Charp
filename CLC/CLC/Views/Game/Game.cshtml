@model CLC.Models.CellGrid
@{
    ViewBag.Title = "Game";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
    var ajax = new AjaxOptions
    {
        HttpMethod = "POST",
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "ajax-target",
        OnSuccess = "ajaxSuccess"
    };
    // var script = @"$('#boardForm').trigger('submit');";
}
<style>
    .minesweeper { margin: auto; }

    table {
        border-collapse: collapse;
        margin: auto;
    }

    td, tr {
        padding: 0;
        border: 2px solid black;
        margin: 0;
    }

    .grid-row { margin: 0; }

    .grid-cell { margin: 0; }

    .cell form {
        width: 50px !important;
        height: 50px !important;
        padding: 0;
        margin: 0;
    }

    .cell {
        background: #ccc;
        width: 50px;
        height: 50px;
        /*border: 2px solid #333;
        border-radius: 3px;*/
        border: 0;
        margin: 0;
        font-size: large;
        font-weight: 700;
        padding: 0;
    }

    .mine {
        background: #f33;
        border-color: #c11;
    }

    .flag {
        background: #3f3;
        border-color: #1c1;
    }

    .cell-lose { border: 0; }

    .cell-win { border: 3px solid #5a5; }

    .cell-checked {
        border: 0;
        background: #fff
    }

    .cell-adjacent-1 { color: #88e; }

    .cell-adjacent-2 { color: #8cc; }

    .cell-adjacent-3 { color: #8e8; }

    .cell-adjacent-4 { color: #cc8; }

    .cell-adjacent-5, cell-adjacent-6 { color: #e87 }

    .cell-adjacent-7, cell-adjacent-8 { color: #f64 }
</style>
<div>
    <div class="row" style="margin: 0 auto 50px; width: 100px; text-align: center">
        <a href="~/Game">New Game</a>

    </div>
    <h4>@DateTime.Now</h4>
    @using (Ajax.BeginForm("Play", "Game", ajax, new { id = "boardForm", @class = "col-md-10" }))
    {
        @Html.AntiForgeryToken()
        <div id="ajax-target">
            @Html.Partial("_Board", Model)
        </div>
    }

</div>